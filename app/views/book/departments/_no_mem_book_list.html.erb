<tr>
	<td class="book-title"><%= book.title%></td>
	<td><%= book.department_books.where(department_id:d.id).first.status==1 ? '已上架' : '已下架' %></td>
	<td><%= price=book.nonmember_price(d.id)%></td>
	<td><%= d.users.has_book_in_payment(book.id,1..3).count %></td>
	<td><%= amount=d.users.has_book_in_payment(book.id,3).count %></td>
	<td class="total-cost"><%= amount*price %></td>
</tr>