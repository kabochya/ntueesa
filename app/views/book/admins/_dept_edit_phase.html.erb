<%= form_tag(  update_dept_phase_book_admin_path(d.id) , method: :put, class: "global_settings_form") do%>
			<div>
			<%= label_tag :dept_phase, "Department Phase" %>
	      <%= radio_button_tag :dept_phase,'off',d.settings.phase==0 ? true:nil %>
	      <%= label_tag :dept_phase_off, "Off" %>
	      <%= radio_button_tag :dept_phase,'buy',d.settings.phase==1 ? true:nil %>
	      <%= label_tag :dept_phase_buy, 'Buy' %>
	      <%= radio_button_tag :dept_phase,'confirm',d.settings.phase==2 ? true:nil %>
	      <%= label_tag :dept_phase_confirm, 'Confirm' %>
	      <%= radio_button_tag :dept_phase,'dist',d.settings.phase==3 ? true:nil %>
	      <%= label_tag :dept_phase_dist, 'Distribution' %>
			</div>
			<div><%= submit_tag 'Change' ,class: 'button small' %></div>
		<% end %>
<%= link_to "End Department Current Stage",  end_current_stage_book_admin_path(d.id), method: :put, class: 'button alert small'%>